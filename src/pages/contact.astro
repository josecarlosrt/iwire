---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <main class="max-w-3xl mx-auto py-16 px-4">
    <h1 class="text-3xl font-bold mb-2 text-primary">Contact Us</h1>
    <p class="text-lg text-gray-700 mb-8">Starting a new construction project? Contact iWire LLC today for a bid or consultation. We’ll help power your project from the ground up!</p>
    <form class="bg-white rounded-lg shadow p-6 mb-10 flex flex-col gap-4" name="contact" method="POST" data-netlify="true" action="/success">
      <input type="hidden" name="form-name" value="contact" />
      <label class="text-sm font-medium text-gray-700" for="name">Name</label>
      <input id="name" name="name" type="text" required class="border rounded px-3 py-2 focus:outline-primary" />
      <label class="text-sm font-medium text-gray-700" for="email">Email</label>
      <input id="email" name="email" type="email" required class="border rounded px-3 py-2 focus:outline-primary" />
      <label class="text-sm font-medium text-gray-700" for="message">Message</label>
      <textarea id="message" name="message" rows="4" required class="border rounded px-3 py-2 focus:outline-primary"></textarea>
      <button type="submit" class="bg-primary text-white font-bold py-2 px-6 rounded hover:bg-green-800 transition mt-2">Send Message</button>
    </form>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-gray-100 rounded-lg p-6 flex flex-col items-center text-center shadow">
        <span class="text-primary text-2xl mb-2">📞</span>
        <h3 class="font-bold text-lg mb-1">Phone</h3>
        <p class="text-gray-700">(407) 459-2328</p>
      </div>
      <div class="bg-gray-100 rounded-lg p-6 flex flex-col items-center text-center shadow">
        <span class="text-primary text-2xl mb-2">✉️</span>
        <h3 class="font-bold text-lg mb-1">Email</h3>
        <p class="text-gray-700">iwireelectric47@gmail.com</p>
      </div>
    </div>
  </main>
</Layout>
